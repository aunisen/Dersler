<Window x:Class="Dersler.KutuphaneWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dersler.KutuphaneWpf"
        mc:Ignorable="d"
        Title="MainWindow"  
        Height="600" 
        Width="900" 
        BorderThickness="0" 
        WindowStyle="None"  
        ResizeMode="NoResize"   
        MouseMove="Window_MouseMove" 
        MouseDoubleClick="Window_MouseDoubleClick"  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border x:Name="SolUst" Background="#001E36" Grid.Row="0" Grid.Column="0">
            <DockPanel HorizontalAlignment="left" VerticalAlignment="Center">
                <Image Source="images/icons/bookshelf.png"/>
                <Label Content="KÜTÜPHANE UYGULAMASI" FontWeight="ExtraBold" Foreground="#efefef" FontSize="14"/>
            </DockPanel>
        </Border>


        <Border x:Name="SagUst" Background="#001E36" Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Border   >
                    <Image Source="images/icons/book-open.png" Height="60" Width="60"/>
                    <Border.Style>
                        <Style TargetType="Border" x:Name="border">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="CornerRadius" Value="50"/>
                            <Setter Property="Background" Value="#31A8FF"/>
                            <Setter Property="Height" Value="100"/>
                            <Setter Property="Width" Value="100"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#008CF3"/>
                                    <Setter Property="Width" Value="110"/>
                                    <Setter Property="Height" Value="110"/>
                                    <Setter Property="CornerRadius" Value="55"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </Border>


        <Border x:Name="SolMenu" Background="#f1f1f1" Grid.Column="1" Grid.Row="0" Width="66" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Button Height="28" Width="28" 
                        Background="White" 
                        Content="__" 
                        FontWeight="Bold" 
                        Foreground="#e1e1e1" BorderBrush="#e1e1e1" FontSize="14" Margin="2,0" x:Name="btn_kucult" Click="btn_kucult_Click" />
                <Button Content="X" x:Name="btn_kapat" Click="btn_kapat_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                              <Setter Property="Height" Value="28"/>
                            <Setter Property="Width" Value="28"/>
                            <Setter Property="Background" Value="Red"/>
                            <Setter Property="Foreground" Value="#eee"/>
                            <Setter Property="FontWeight" Value="ExtraBold"/> 
                            <Setter Property="BorderBrush" Value="Red"/> 
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Margin" Value="2,0"/>

                            <Style.Triggers >
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter  Property="BorderBrush" Value="DarkRed"/>
                                    <Setter Property="Background" Value="DarkRed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        <Border x:Name="sagContainer" Background="#fefefe" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3">
            <UniformGrid  Rows="8" Columns="7">

                <Border Background="#eaeaea" Margin="3,3,3,0" />
                <Border Background="#eaeaea" Margin="3,3,3,0"/>
                <Border Background="#eaeaea" Margin="3,3,3,0"/>
